doctype html
html
  head
    title= title
    
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.js")
    
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.6/angular.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular-route.js', charset='utf-8')
    
    script(src="https://cdn.jsdelivr.net/lodash/4.13.1/lodash.min.js")
    
    link(rel='stylesheet', href='/styles/main.css')
    script(src="javascripts/script.js")
    
  body(ng-app='bsui', ng-controller='MainCtrl')
    .ui.container.content-container
        .ui.segment.content
            .ui.grid
                .four.wide.column
                    .ui.secondary.vertical.menu
                        mixin menuitem(id, name)
                            a.item(href!="#/#{id}", ng-class="context.page=='#{id}' ? 'active' : ''") #{name}
                            
                        +menuitem('hosts', 'Hosts')
                        +menuitem('cdn', 'CDN')
                        
                .twelve.wide.stretch.column
                    div(ng-view)
                        
                        
                            
